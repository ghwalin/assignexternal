{{!
    @template mod_assignexternal/grading_navigation

    Actions panel at the bottom of the assignment grading UI.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region, data-assignmentid, data-groupid

    Context variables required for this template:
    * cmid: coursemodule-id

    This template includes ajax functionality, so it cannot be shown in the template library.
}}
<div class="container-fluid">
  <div data-region="grading-navigation" class="row">

    <div data-region="assignment-info" class="col-md-4">
      <a href="{{config.wwwroot}}/mod/assignexternal/view.php?id={{cmid}}&action=grading">{{#str}} showall, core {{/str}}</a>
    </div>
    <div data-region="user-info" class="col-md-4">
      {{> mod_assignexternal/grader_navigation_user_info }}
    </div>
    <div data-region="user-selector" class="col-md-4">
      <div class="alignment">
        {{> mod_assignexternal/grader_navigation_user_selector }}
      </div>
    </div>
  </div>
</div>
{{^element.frozen}}
{{#js}}
  require(['mod_assignexternal/grader_navigation'], (module) => module.init());
{{/js}}
{{/element.frozen}}